{
  "name": "nyvia",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "cross-env APP_ENV=development next dev -p 3000",
    "dev:mock": "cross-env NYVIA_MOCK_MODE=mock next dev -p 3000",
    "dev:openai": "cross-env NYVIA_MOCK_MODE=openai next dev -p 3000",
    "dev:auto": "cross-env NYVIA_MOCK_MODE=auto next dev -p 3000",
    "build:staging": "cross-env APP_ENV=staging next build",
    "start:staging": "cross-env APP_ENV=staging next start",
    "build:prod": "cross-env APP_ENV=production next build",
    "start:prod": "cross-env APP_ENV=production next start",
    "build": "next build",
    "start": "cross-env PORT=3000 next start -p 3000",
    "test": "jest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:next": "next lint",
    "record": "node ops/bin/record.mjs"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "mongodb": "^6.20.0",
    "next": "^15.5.6",
    "openai": "^4.103.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@eslint/eslintrc": "^3",
    "babel-jest": "^30.0.5",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  }
}
